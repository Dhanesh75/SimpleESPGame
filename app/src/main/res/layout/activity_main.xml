<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="esp.com.espgame.MainActivity"
    android:background="#000000"
    >


    <TextView
        android:id="@+id/secondary_b"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:background="#e0e0e0"
        android:text="Score : "
        android:onClick="pressB"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_alignTop="@+id/secondary_a"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/secondary_d"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:onClick="pressD"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#616161"
        android:text="Score : "
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondary_a"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:background="#616161"
        android:text="Score : "
        android:onClick="pressA"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_above="@+id/secondary_c"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/primary_image"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#e0e0e0"
        android:gravity="center"
        android:text="Score : "
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/scoreCount"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/scoreCount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#616161"
        android:textColor="#f5f5f5"
        android:text="Get me Outta Here!"
        android:layout_marginLeft="10dp"
        android:onClick="LogOut"
        />
    <TextView
        android:id="@+id/secondary_c"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:onClick="pressC"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#e0e0e0"
        android:text="Score : "
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreCount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e0e0e0"
        android:text="Score : "
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
